.plan{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  font-size: 20px;
}

.row, .row-button{
  display: flex;
  width: 100%;
  padding: 12px 24px 0 12px;
  border-bottom: gray;
  align-items:flex-start;
  justify-content:center;
}

.row-button{
  align-items: flex-end;
}

.ok-button{
  background-color: red;
  width: 120px;
  color: white;
  margin-right: 120px;
}

.dotview {
  display: inline;
  height: 40px;
  width: 40px;
  padding: 15px;
}

.dot{
  height: 100%;
  width: 100%;
  border-radius: 5px;
  background-color: red;
}

.address-display{
  flex-grow: 1;
  padding: 0 24px 8px 24px;
  border-bottom: solid 1px #9a9a9a;
}

.green-dot{
  color: green
}

.red-dot{
  color: red
}


.clock{
  height: 28px;
  width: 28px;
  margin-left: 8px;
}

.time-picker{
  display: flex;
  align-items: flex-start;
  justify-content: center;
  color: #3a3a3a;
  flex-grow: 1;
}
