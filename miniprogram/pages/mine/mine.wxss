.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
  padding-top: 80px;
}
.tabs {
  display: flex;
  justify-content: space-between;
  border-bottom: 2px solid #ddd;  
}

.tab-item {
  flex: 1;
  padding: 10px;
  padding-right: 20px;
  padding-left:20px;
  text-align: center;
}

.tab-content {
  width: 100%;
  padding: 10px;
  align-items: flex-start;
  flex-direction: column;
  display: flex;
}

.trips {
  width: 100%;
  height: 80vh;
  overflow-y: scroll;
}

.trip-card {
  border: 1px solid #e6e6e6;
  padding: 10px;
  margin: 10px 0;
  border-radius: 5px;
  background-color: #f5f5f5;
}

.date-status {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.trip-date {
  font-weight: bold;
  color: #333;
}

.trip-status {
  color: #FF4500;  /* 可根据需要调整颜色 */
}

.trip-info {
  display: flex;
  flex-direction: column;
}

.location {
  margin: 3px 0;
}

.text-box {
  margin: 10px 0;
  padding: 10px;
}

.image-box {
  width: 100%;
  display: flex;
  justify-content: center;
}

.about {
  width: 100%;
  height:100vh;
}