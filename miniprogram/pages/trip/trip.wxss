.show-map-container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  height: 100vh;
  width: 100vw;
  background: #bababa;
}

.map {
  display: flex;
  width: 100%;
  height: 100%;
}

.panel-frame {
  position: absolute;
  left: 0;
  bottom: 0;
  margin: 8px;
  width: calc(100vw - 24px);
  border-radius: 4px;
  background-color: white;
  padding: 4px;
  z-index: 10;
}

.panel{
  width: 100%;
  height: 100%;
  border-radius: 4px;
  background-color: white;
}